<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nv_header_vertical_marging"
    android:paddingLeft="@dimen/nv_header_horizontal_marging"
    android:paddingRight="@dimen/nv_header_horizontal_marging"
    android:paddingTop="@dimen/nv_header_vertical_marging"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="জরুরী সেবা"
        android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/headline"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="খরুলিয়া-কক্সবাজার"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />

</LinearLayout>
