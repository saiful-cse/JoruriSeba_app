<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_loged"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbebf4"
    tools:context="com.coxtunes.joruriseba.Log_in.Loged">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="নামাজের সময়সূচী"
            android:textColor="#212121"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#e4ecf2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="ফজর"
                android:gravity="center"
                android:id="@+id/fa_time_insert"
                android:background="#dbebf4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="ফজর পোস্ট"
                android:textColor="@color/post_button"
                android:textStyle="bold"
                android:background="@drawable/button_view"
                android:id="@+id/fajor_edit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="যোহর"
                android:gravity="center"
                android:id="@+id/za_time_insert"
                android:background="#dbebf4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="যোহর পোস্ট"
                android:textColor="@color/post_button"
                android:textStyle="bold"
                android:background="@drawable/button_view"
                android:id="@+id/johar_edit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="আসর"
                android:gravity="center"
                android:id="@+id/asar_time_insert"
                android:background="#dbebf4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="আছর পোস্ট"
                android:textColor="@color/post_button"
                android:textStyle="bold"
                android:background="@drawable/button_view"
                android:id="@+id/asar_edit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="মাগরীব"
                android:gravity="center"
                android:id="@+id/magrib_time_insert"
                android:background="#dbebf4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="মাগরিব পোস্ট"
                android:textColor="@color/post_button"
                android:textStyle="bold"
                android:background="@drawable/button_view"
                android:id="@+id/magrib_edit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="ইশা"
                android:gravity="center"
                android:id="@+id/isha_time_insert"
                android:background="#dbebf4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="ইশা পোস্ট"
                android:textColor="@color/post_button"
                android:textStyle="bold"
                android:background="@drawable/button_view"
                android:id="@+id/isha_edit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="জুমা"
                android:gravity="center"
                android:id="@+id/joma_time_insert"
                android:background="#dbebf4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="জুমা পোস্ট"
                android:textColor="@color/post_button"
                android:textStyle="bold"
                android:background="@drawable/button_view"
                android:id="@+id/joma_edit"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="নিউজ"
            android:textColor="#212121"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#e4ecf2"
            android:layout_marginBottom="3dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="*শিরোনাম"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="এখানে শিরোনাম লিখুন"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="1000"
                android:maxLines="10"
                android:scrollHorizontally="false"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="*বর্ণনা"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="এখানে বর্ণনা লিখুন"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="5000"
                android:maxLines="200"
                android:scrollHorizontally="false"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="*নিউজ সংগ্রহে"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="এখানে নিউজ সংগ্রহকারীর নাম লিখুন"
                android:inputType="text"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:text="*ছবি যুক্ত করুন"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ছবির সাইজ অবশ্যই 300 KB এর কম হতে হবে।"
                        android:textColor="#ed2525"
                        android:gravity="center"
                        android:textSize="11sp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/imgvphoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/defaultuploadimage" />

            </RelativeLayout>


            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/material_design_ball_spin_fade_loader"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:indicator="BallSpinFadeLoader"
                app:indicator_color="@color/colorAccent" />

            <ImageView
                android:id="@+id/ViewImage"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/publishBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/button_corner_round"
            android:text="পোস্ট"
            android:textColor="@color/post_button"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/button_corner_round"
            android:text=" নিউজ আপডেট "
            android:textColor="@color/post_button"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/allBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/button_corner_round"
            android:text="অল নিউজ"
            android:textColor="@color/post_button"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/contactUpdateBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/button_corner_round"
            android:text="ডাটা আপডেট"
            android:textColor="@color/post_button" />

    </LinearLayout>


</RelativeLayout>
