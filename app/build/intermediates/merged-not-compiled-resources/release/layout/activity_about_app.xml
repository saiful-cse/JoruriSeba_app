<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:background="#d3dee7"
    tools:context="com.coxtunes.joruriseba.AboutApp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="ভুমিকা"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="আসসালামু আলাইকুম, হে খরুলিয়াবাসী আপনারা সবাই ভাল আছেন। আমাদের দৈন্দিন জীবনে আমরা বিভিন্ন সমস্যায় সম্মুখীন হয়ে থাকি। যেমনঃ হঠাৎ অসুস্থ হলে ডাক্তারের পরামর্শের প্রয়োজন, হাসপাতালে যেতে হলে সিএনজি গাড়ির প্রয়োজন, ঔষুদের জন্য ফার্মেসির প্রয়োজন, রান্না কাজে ব্যবহারের জন্য গ্যাস সিলিন্ডার প্রয়োজন, অগ্নি সংক্রান্ত দুর্ঘটনার জন্য ফায়ার সার্ভিসের প্রয়োজন ও বিদ্যুৎ সংক্রান্ত অভিযোগের জন্য বিদ্যুৎ অফিসের সাথে যোগাযোগের প্রয়োজন। এই সমস্ত সমস্যাগুলির সমাধান হাতের মুঠোর আনতে ২০১৭ সালের ফেব্রুয়ারি মাস থেকে “স্মার্ট এন্ড্র্যয়েড সফটওয়্যার” এর কাজ শুরু করেছিলাম। দীর্ঘ ছয়মাস যাবৎ কাজ করে মানুষের বোদ্গম্য সুন্দর একটা “মোবাইল সফটওয়ার” দাড় করাতে পেরে আমি অনেক আনন্দিত। এই সফটওয়্যারটির জন্য এলাকার কিছু বড়ভাইয়েরা সুন্দর আইডিয়া দিয়ে অনুপ্রাণিত করেছিল আমি তাদের প্রতি কৃতজ্ঞ জানাই। এই সফটওয়ারটি বানানোর প্রধান উদ্দেশ্য হচ্ছে, নিজের অর্জিত জ্ঞানগুলি সবার মাঝে বিলিয়ে দেওয়া। \n\nবিঃদ্রঃ এই সফটওয়ারটিতে কোন ধরনের ভুল-ভ্রান্তি আপনার চোখে পড়ে থাকলে অবশ্যই কমেন্টে জানাবেন এবং ক্ষমার দৃষ্টিতে থাকাবেন"
            android:textSize="17sp"
            android:textColor="#000000"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:textStyle="bold"
            android:id="@+id/comment"
            android:text="কমেন্ট করুন"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="\nসফটওয়্যার নির্মাতা\nসাইফুল\nখরুলিয়া মাষ্টার পাড়া\n০১৮৩৫ ৫৫৯১৬১\n"
            android:textSize="17sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="version: 2.1"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="10sp"/>
    </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/doctor_footer">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
